@model IncidentViewModel
@{
    ViewBag.Title = "Edit Incident";
    ViewBag.Heading = "Edit Incident";
    ViewBag.Desc = "Please fill out incident information";
}

<form class="addEditForm" asp-action="Edit" method="post">
    <h2 class="subHeading">Incident information</h2>
    <div>
        <label asp-for="@Model.Incident.CustomerId">Customer</label>
        <select asp-for="@Model.Incident.CustomerId" class="form-control" asp-items="@Model.CustomerList">
           <option>Select a Customer</option>
        </select>
        <span asp-validation-for="@Model.Incident.CustomerId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Incident.ProductId">Product</label>
        <select asp-for="@Model.Incident.ProductId" class="form-control" asp-items="@Model.ProductList">
            <option value="">Select a Product</option>
        </select>
        <span asp-validation-for="@Model.Incident.ProductId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Incident.Title">Title</label>
        <input asp-for="@Model.Incident.Title" />
        <span asp-validation-for="@Model.Incident.Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="@Model.Incident.Description">Description</label>
        <input asp-for="@Model.Incident.Description" />
        <span asp-validation-for="@Model.Incident.Description" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Incident.TechnicianId">Technician</label>
        <select asp-for="@Model.Incident.TechnicianId" class="form-control" asp-items="@Model.TechnicianList">
            <option value="">Select a Technician</option>
        </select>
    </div>


    <div>
        <label asp-for="@Model.Incident.DateOpened">Date Opened</label>
        <input asp-for="@Model.Incident.DateOpened" asp-format="{0:yyyy-MM-ddTHH:mm}" textmode="Date" />
    </div>
    <div>
        <label asp-for="@Model.Incident.DateClosed">Date Closed</label>
        <input type="text" id="DateClosed" asp-for="@Model.Incident.DateClosed" />
    </div>
    <div>
        <input type="hidden" asp-for="@Model.Incident.IncidentId" />
        <button class="fBtn" type="submit">@ViewBag.Action</button>
        <a class="fBtn" asp-controller="Incident" asp-action="Index">Cancel</a>
    </div>
</form>