@model IncidentViewModel
@{
    ViewBag.Title = @Model.ActionPage + " Incident";
    ViewBag.Heading = @Model.ActionPage + " Incident";
    ViewBag.Desc = "Please fill out incident information";
    

}

<form class="addEditForm" asp-action="Edit" method="post">
    <h2 class="subHeading">Incident information</h2>
    <div>
        <label asp-for="@Model.Incident.CustomerId">Customer</label>
        <span asp-validation-for="@Model.Incident.CustomerId" class="form_input_error_message"></span>
        <select asp-for="@Model.Incident.CustomerId" class="addEditForm_dd" asp-items="@Model.CustomerList">
            <option>Select a Customer</option>
        </select>
    </div>
    <div>
        <label asp-for="@Model.Incident.ProductId">Product</label>
        <span asp-validation-for="@Model.Incident.ProductId" class="form_input_error_message"></span>
        <select asp-for="@Model.Incident.ProductId" class="addEditForm_dd" asp-items="@Model.ProductList">
            <option value="">Select a Product</option>
        </select>

    </div>
    <div>
        <label asp-for="@Model.Incident.Title">Title</label>
        <span asp-validation-for="@Model.Incident.Title" class="form_input_error_message"></span>
        <input asp-for="@Model.Incident.Title" />
    </div>

    <div>
        <label asp-for="@Model.Incident.Description">Description</label>
        <span asp-validation-for="@Model.Incident.Description" class="form_input_error_message"></span>
        <input asp-for="@Model.Incident.Description" />
    </div>


    <div class="form-group">
        <label asp-for="@Model.Incident.TechnicianId">Technician</label>
        <span asp-validation-for="@Model.Incident.TechnicianId" class="form_input_error_message"></span>
        <select asp-for="@Model.Incident.TechnicianId" class="addEditForm_dd" asp-items="@Model.TechnicianList">
            <option value="">Select a Technician</option>
        </select>
    </div>


    <div>
        <label asp-for="@Model.Incident.DateOpened">Date Opened</label>
        <span asp-validation-for="@Model.Incident.DateOpened" class="form_input_error_message"></span>
        <input asp-for="@Model.Incident.DateOpened" asp-format="{0:yyyy-MM-ddTHH:mm}" textmode="Date" />
    </div>
    <div>
        <label asp-for="@Model.Incident.DateClosed">Date Closed</label>
        <input type="text" id="DateClosed" asp-for="@Model.Incident.DateClosed" />
    </div>
    <div>
        <input type="hidden" asp-for="@Model.Incident.IncidentId" />
        <button class="fBtn" type="submit">@Model.ActionPage</button>
        <a class="cancelB" asp-controller="Incident" asp-action="Index">Cancel</a>
    </div>
</form>