@{
   var currentAction = ViewContext.RouteData.Values["action"].ToString();
   var currentController = ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/sportspro.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Gruppo&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title> @ViewBag.Title | SportsPro</title> <!-- CHANGE PAGE TITLE -->
</head>
<body>
    <div class="wrap">
        <header>
            <div class="container">
                <div id="logo">
                    <img src="/img/sportsProLogo.png" alt="SportsPro">
                </div>
                <div id="nav">
                    <nav>
                        <a href="/" class="@(currentController == "Home" && currentAction == "Index" ? "navFocus" : "")">Home</a>
                        <a href="/products" class="@(currentController == "Product" ? "navFocus" : "")">Products</a>
                        <a href="/technicians" class="@(currentController == "Technician" ? "navFocus" : "")">Technicians</a>
                        <a href="/customers" class="@(currentController == "Customer" ? "navFocus" : "")">Customers</a>
                        <a href="/incidents" class="@(currentController == "Incident" ? "navFocus" : "")">Incidents</a>
                        <a href="/registrations" class="@(currentController == "Registration" ? "navFocus" : "")">Registrations</a>
                        <a href="/about" class="@(currentController == "Home" && currentAction == "About" ? "navFocus" : "")">About</a>
                    </nav>
                </div>
            </div>
        </header>
        <main>
            <div id="top">
                <div class="container">
                    <h1>@ViewBag.Heading</h1> <!-- CHANGE HEADING -->
                    <p>@ViewBag.Desc</p> <!-- CHANGE HERE AS WELL -->
                </div>
            </div>
            <div class="mainContents">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
