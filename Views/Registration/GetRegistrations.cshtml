@model RegistrationListViewModel
@{
    ViewBag.Title = "Registrations";
}

     <form asp-action="Add" method="post">
    <label>Customer: @ViewBag.Session</label>
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="font">Customer</th>
                <th class="font">Product</th>
                <th class="font">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Registration reg in Model.Registrations)
            {

                <tr>
                    <td>@reg.Customer.FirstName @reg.Customer.LastName</td>
                    <td>@reg.Product.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@reg.RegistrationId">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
        </table>

    <label>Product</label>
    <select class="form-control" name="productId" asp-items="@Model.ProductList">
    </select>
    <br />

    <button type="submit" class="btn btn-primary">Register</button>
    <a class="btn btn-primary" asp-action="Index">Back</a>
         </form>
